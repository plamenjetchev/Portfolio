<h1>Angular Portfolio Items</h1>

<!-- <a href="my_portfolios/new">Create New Item</a>
</br> -->
<!-- example of another way to create the link -->

<%= link_to "Create New Item", new_my_portfolio_path %>

<% @angular_portfolo_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title,  portfolio_show_path(portfolio_item) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%=image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
  <%= link_to "Edit", edit_my_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
  <%= link_to "Delete", my_portfolio_path(portfolio_item), method: :delete, data: { confirm: "Are you sure?" } if logged_in?(:site_admin) %>
<% end %>
  